{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "rootDir": "./",
    "allowJs": false,
    "outDir": "./dist/",
    "baseUrl": "./",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "ts-node": {
    "esm": true
  },
  "references": [
    {
      "path": "./frontend/tsconfig.json"
    }
  ],
  "include": [
    "backend/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    ".eslintrc.cjs",
    "./frontend/node_modules/"
  ]
}