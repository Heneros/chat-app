{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "app/*": [
                "src/app/*"
            ],
            "entities/*": [
                "src/entities/*"
            ],
            "features/*": [
                "src/features/*"
            ],
            "pages/*": [
                "src/pages/*"
            ],
            "shared/*": [
                "src/shared/*"
            ],
            "widgets/*": [
                "src/widgets/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}