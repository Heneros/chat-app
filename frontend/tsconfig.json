{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "target": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "app/*": [
                "src/app/*"
            ],
            "entities/*": [
                "src/entities/*"
            ],
            "features/*": [
                "src/features/*"
            ],
            "pages/*": [
                "src/pages/*"
            ],
            "shared/*": [
                "src/shared/*"
            ],
            "widgets/*": [
                "src/widgets/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "../"
        }
    ],
}